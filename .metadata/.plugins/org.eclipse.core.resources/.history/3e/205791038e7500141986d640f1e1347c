package dataSets;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.MalformedURLException;
import java.net.URL;
import java.net.URLConnection;

public class ERPRate {

	public ERPRate(URLConnection conn, String writeFileNumber) {
		
	}
	
	public void writeToFile() throws IOException {
		String apiUrl;
		String wholeXML = "";
		int skip = 0;
		boolean cont = true;
		while (cont) {
			apiUrl = "http://datamall.mytransport.sg/ltaodataservice.svc/ERPRateSet" + "?$skip=" + skip;
			URLConnection conn = (new Connection(apiUrl)).getConn();
			BufferedReader br = new BufferedReader(new InputStreamReader(conn.getInputStream()));
			String line = null;
			StringBuilder strBuilder = new StringBuilder();
			wholeXML = "";
			while ((line = br.readLine()) != null) {
				if (skip < 50) {
					wholeXML += line;
				}
			}
			System.out.println("wholexml: " + wholeXML);
			
			
			// apiUrl = "http://datamall.mytransport.sg/ltaodataservice.svc/BusStopCodeSet?$skip="+skip;
			
			
			
		}
	}

}
